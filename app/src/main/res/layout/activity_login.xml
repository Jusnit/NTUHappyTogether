<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/garden">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/direct_enter"
            android:layout_centerVertical="true"
            android:textSize="@dimen/lobby_label_size"
            android:layout_centerHorizontal="true"

            android:text="直接進入"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="註冊"
            android:id="@+id/registerText"

            android:layout_alignLeft="@+id/direct_enter"
            android:layout_alignStart="@+id/direct_enter"
            android:textSize="@dimen/lobby_label_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登入"
            android:id="@+id/login_text"

            android:layout_toRightOf="@+id/direct_enter"
            android:layout_toEndOf="@+id/direct_enter" />

    </RelativeLayout>
</RelativeLayout>
